generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma/client"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto {
  id          String   @id @default(uuid())
  nome        String
  quantidade  Int
  origem      String
  sku         String   @unique
  descricao   String?

  // üîê Produto SEMPRE pertence a um usu√°rio
  user        User     @relation(
    fields: [userId],
    references: [id],
    onDelete: Cascade
  )
  userId      String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}
