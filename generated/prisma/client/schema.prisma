generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma/client"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  // Rela√ß√£o 1:N
  produtos Produto[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Produto {
  id         String  @id @default(uuid())
  nome       String
  quantidade Int
  origem     String
  sku        String  @unique
  descricao  String?

  // üîê Rela√ß√£o com usu√°rio
  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
