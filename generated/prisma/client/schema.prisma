generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  produtos  Produto[] // relação 1:N
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Produto {
  id         String   @id @default(uuid())
  nome       String
  quantidade Int
  origem     String
  sku        String   @unique
  descricao  String?
  user       User?    @relation(fields: [userId], references: [id])
  userId     String? // opcional para produtos existentes
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
